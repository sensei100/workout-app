<header role="banner">
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse"
        data-target="#bs-example-navbar-collapse-1">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Athletes Den", root_path, class: "navbar-brand" %>
      </div>

      <%= form_tag(search_dashboards_path,
                      class: "navbar-form navbar-left",
                      role: "search") do %>
        <div class="form-group">
          <%= text_field_tag :search_name, nil, placeholder: "Search for friends", class: "form-control" %>
        </div>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
      
      <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li class="active"><%= link_to "Home", root_path %></li>
          <% unless user_signed_in? %>
            <li class="active"><%= link_to "Sign up", new_user_registration_path %></li>
            <li class="active"><%= link_to "Sign in", new_user_session_path %></li>
          <% else %>
            <li class="active"><%= link_to "My Lounge", user_exercises_path(current_user) %></li>
            <li class="active"><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
          <% end %>
          <% if user_signed_in? %>
            <div class="navbar-right">
              <p id="signed-in-user" class="navbar-text ">
                Signed in as <%= "#{current_user.email}" %>
              </p>
            </div>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
